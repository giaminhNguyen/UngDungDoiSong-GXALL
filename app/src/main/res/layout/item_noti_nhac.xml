<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#27BBFD">

    <ImageView
        android:id="@+id/layout_noti_img_anh"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_musicnote_24" />

    <LinearLayout
        android:id="@+id/layout_noti_linearLayout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/layout_noti_img_anh"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_noti_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bài hát"
            android:fontFamily="@font/basic"
            android:textColor="#9C27B0"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/layout_noti_tv_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signer"
            android:fontFamily="@font/basic"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>