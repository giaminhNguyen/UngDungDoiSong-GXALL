<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragManHinhChinh_gui_h1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragManHinhChinh_gui_h2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragManHinhChinh_gui_v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yellowblue"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/manHinhChinhFrag_img_avatar"
        android:src="@drawable/person_100"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragManHinhChinh_gui_h1" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="center_horizontal"
        android:text="WELCOME"
        android:textColor="#F7F4FB"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/manHinhChinhFrag_img_avatar" />

    <TextView
        android:id="@+id/manHinhChinhFrag_btn_tenNguoiDung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:gravity="center_horizontal"
        android:text="MINH"
        android:textColor="#C34C44"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:gravity="center_horizontal"
        android:text="Have a good day"
        android:textColor="#F7F4FB"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/manHinhChinhFrag_btn_tenNguoiDung" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manHinhChinhFrag_btn_amNhac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/corner10_shadow"
        android:drawableTop="@drawable/ablum_100"
        android:fontFamily="@font/chonburi"
        android:padding="10dp"
        android:text="Âm Nhạc"
        android:textAllCaps="false"
        android:textColor="#195C57"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragManHinhChinh_gui_v1"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragManHinhChinh_gui_h2"
        app:layout_constraintVertical_bias="0.502"
        app:layout_constraintWidth_percent="0.4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manHinhChinhFrag_btn_tinTuc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/corner10_shadow"
        android:drawableTop="@drawable/news_100"
        android:fontFamily="@font/chonburi"
        android:padding="10dp"
        android:text="Tin Tức"
        android:textAllCaps="false"
        android:textColor="#195C57"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toEndOf="@id/fragManHinhChinh_gui_v1"
        app:layout_constraintTop_toBottomOf="@+id/fragManHinhChinh_gui_h2"
        app:layout_constraintWidth_percent="0.4" />
</androidx.constraintlayout.widget.ConstraintLayout>